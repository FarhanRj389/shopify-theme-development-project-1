<div class="cart-page">
    <h1 class="cart-title">{{ 'cart.title' | t }}</h1>
    {% if cart.item_count == 0 %}
        <p class="cart-empty-message">{{ 'cart.empty' | t }}</p>
        <div class="cart-empty-actions"></div>
            <a href="{{ routes.all_products_collection_url }}" class="cart-container-btn">{{ 'cart.continue_shopping' | t }}</a>
        </div>
    {% else %}
    <form action="{{ routes.cart_url }}" method="post">
        <table class="cart-tables">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th style="text-align: right;">Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in cart.items %}
                    <tr>
                        <td>
                            <div class="cart-product-details">
                                {% if item.image %}
                                <img src="{{ item.image | img_url: 'medium' }}" alt="{{ item.title }}" class="cart-product-img" />
                                {% endif %}
                                <div>
                                    <div class="cart-product-title">{{ item.product.title }}</div>
                                    {% if item.variant.title != 'Default Title' %}
                                        <div class="cart-product-variant">{{ item.variant.title }}</div>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                        <td class="cart-product-price">{{ item.price | money }}</td>
                        <td class="cart-product-qty">{{ item.quantity }}</td>
                        <td class="cart-product-total" style="text-align: right;">{{ item.line_price | money }}</td>
                        <td>
                            <a href="{{ item.url_to_remove }}" class="cart-remove-btn" title="Remove">Remove</a>
                        </td>
                    </tr>
                {% endfor %}
                <tr class="cart-total-row">
                    <td colspan="3" style="text-align: right;">Subtotal:</td>
                    <td style="text-align: right;">{{ cart.total_price | money }}</td>
                    <td></td>
                </tr>
            </tbody>
        </table>
        <a href="/checkout" class=" button cart-checkout-btn">Checkout</a>
    </form>
    {% endif %}
</div>

<style>
.cart-page {
    max-width: 700px;
    margin: 40px auto;
    padding: 32px 24px;
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
