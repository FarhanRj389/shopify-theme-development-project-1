.cart-checkout-btn {
    display: block;
    width: 100%;
    padding: 1.1rem;
    background: linear-gradient(90deg, #27ae60 60%, #219150 100%);
    color: #fff;
    border: none;
    border-radius: 10px;
    font-size: 1.25rem;
    font-weight: 700;
    cursor: pointer;
    text-align: center;
    text-decoration: none;
    margin-top: 2rem;
    box-shadow: 0 2px 12px rgba(39,174,96,0.08);
    transition: background 0.2s, box-shadow 0.2s;
}
.cart-checkout-btn:hover {
    background: linear-gradient(90deg, #219150 60%, #27ae60 100%);
    box-shadow: 0 4px 24px rgba(39,174,96,0.14);
}
.cart-total-row td {
    font-weight: 700;
    font-size: 1.1rem;
    background: #f7f7fa;
    color: #22223b;
    border-bottom: none;
}
@media (max-width: 600px) {
    .cart-page {
        padding: 16px 4px;
    }
    .cart-tables th, .cart-tables td {
        padding: 0.7rem 0.4rem;
        font-size: 0.95rem;
    }
    .cart-product-img {
        width: 48px;
        height: 48px;
        margin-right: 0.7rem;
    }
    .cart-checkout-btn {
        font-size: 1.05rem;
        padding: 0.8rem;
    }
}
</style>