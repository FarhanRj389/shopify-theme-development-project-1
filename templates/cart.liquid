}
.cart-product-variant {
    color: #7c7c7c;
    font-size: 0.95rem;
    margin-top: 2px;
}
.cart-product-price,
.cart-product-qty,
.cart-product-total {
    font-size: 1rem;
    color: #22223b;
}
.cart-remove-btn {
    background: linear-gradient(90deg, #e74c3c 60%, #c0392b 100%);
